<!doctype html>

<html>
    <head>
        <title>Real Estate Listings</title>
    </head>
    <body>
        <div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				 Real Estate Listings
			</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
		</div>
		<div class="col-md-9">
			<div class="card mb-3">
				<img class="card-img-top" src="{{image}}" alt="{{name}}">
				<div class="card-body">
					<h4 class="float-right">
                        {{price}}/night
					</h4>
					<h5 class="card-title">
						<a href="#">{{name}}</a> 
					</h5>
					<p>
						{{description}}
					</p> 
					<p>
						<em>Created by:</em> {{author.username}}
					</p>				
				</div>
			</div>
		</div>
	</div>
</div>
        
    </body>
</html>